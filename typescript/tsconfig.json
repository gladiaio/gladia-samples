{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "../javascript/src",
    "removeComments": false,
    "pretty": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
